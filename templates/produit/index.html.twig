{% extends 'base.html.twig' %}
{% block title %}Menu — Lens FoodTruck{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-grid text-warning"></i> Notre Menu</h1>
        <a href="{{ path('produit_new') }}" class="btn btn-orange">
            <i class="bi bi-plus-lg"></i> Nouveau produit
        </a>
</div>

{% if produits is empty %}
    <div class="alert alert-info">Aucun produit pour l'instant.</div>
{% else %}
    <div class="row row-cols-1 row-cols-md-3 g-4">
        {% for p in produits %}
        <div class="col">
            <div class="card h-100 produit-card">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h5 class="fw-bold mb-0">{{ p.nom }}</h5>
                        {% if p.image %}
                            <img src="{{ asset('uploads/produits/' ~ p.image) }}"
                                 alt="{{ p.nom }}"
                                 style="width:70px;height:70px;object-fit:cover;border-radius:10px;margin-left:10px;">
                        {% endif %}
                    </div>
                    <p class="text-muted small flex-grow-1">{{ p.description ?? 'Aucune description.' }}</p>
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <span class="fs-4 fw-black" style="color:var(--orange)">{{ p.prix|number_format(2,',','') }} €</span>
                        {% if is_granted('ROLE_ADMIN') %}
                        <div class="btn-group btn-group-sm">
                            <a href="{{ path('produit_edit',{id:p.id}) }}" class="btn btn-outline-secondary"><i class="bi bi-pencil"></i></a>
                            <form method="post" action="{{ path('produit_delete',{id:p.id}) }}" onsubmit="return confirm('Supprimer ?')">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete'~p.id) }}">
                                <button class="btn btn-outline-danger" style="border-radius:0 4px 4px 0"><i class="bi bi-trash"></i></button>
                            </form>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
{% endif %}

    <div class="text-center mt-5">
        <a href="{{ path('commande_new') }}" class="btn btn-orange btn-lg">
            <i class="bi bi-cart-plus"></i> Passer une commande
        </a>
    </div>
{% endblock %}