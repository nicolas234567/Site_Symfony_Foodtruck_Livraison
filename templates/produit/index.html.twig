{% extends 'base.html.twig' %}
{% block title %}Menu — Lens FoodTruck{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-grid text-warning"></i> Notre Menu</h1>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('produit_new') }}" class="btn btn-orange">
            <i class="bi bi-plus-lg"></i> Nouveau produit
        </a>
    {% endif %}
</div>

{% if produits is empty %}
    <div class="alert alert-info">Aucun produit pour l'instant.</div>
{% else %}
    <div class="row row-cols-1 row-cols-md-3 g-4">
        {% for produit in produits %}
        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title fw-bold">{{ produit.nom }}</h5>
                    <p class="card-text text-muted small">{{ produit.description ?? 'Pas de description.' }}</p>
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <span class="fs-5 fw-bold text-warning">{{ produit.prix|number_format(2, ',', ' ') }} €</span>
                        {% if produit.disponible %}
                            <span class="badge bg-success">Disponible</span>
                        {% else %}
                            <span class="badge bg-secondary">Indisponible</span>
                        {% endif %}
                    </div>
                </div>
                {% if is_granted('ROLE_ADMIN') %}
                <div class="card-footer bg-transparent">
                    <a href="{{ path('produit_edit', {id: produit.id}) }}" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-pencil"></i> Modifier
                    </a>
                    <form method="post" action="{{ path('produit_delete', {id: produit.id}) }}"
                          class="d-inline" onsubmit="return confirm('Supprimer ce produit ?')">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
                        <button class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash"></i> Supprimer
                        </button>
                    </form>
                </div>
                {% endif %}
            </div>
        </div>
        {% endfor %}
    </div>
{% endif %}

{% if app.user %}
    <div class="text-center mt-5">
        <a href="{{ path('commande_new') }}" class="btn btn-orange btn-lg">
            <i class="bi bi-cart-plus"></i> Passer une commande
        </a>
    </div>
{% endif %}
{% endblock %}
