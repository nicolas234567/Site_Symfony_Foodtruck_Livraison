{% extends 'base.html.twig' %}
{% block title %}Modifier â€” {{ produit.nom }}{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0"><i class="bi bi-pencil"></i> Modifier : {{ produit.nom }}</h4>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    {{ form_row(form.nom) }}
                    {{ form_row(form.prix) }}
                    {{ form_row(form.description) }}
                    <div class="form-check mb-3">
                        {{ form_widget(form.disponible) }}
                        {{ form_label(form.disponible) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.imageFile) }}
                        {{ form_widget(form.imageFile) }}
                        {% if produit.image %}
                            <div class="mt-2">
                                <img src="{{ asset('uploads/produits/' ~ produit.image) }}"
                                    style="width:80px;height:80px;object-fit:cover;border-radius:8px;">
                                <small class="text-muted ms-2">Image actuelle</small>
                            </div>
                        {% endif %}
                    </div>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-orange">
                            <i class="bi bi-save"></i> Enregistrer
                        </button>
                        <a href="{{ path('produit_index') }}" class="btn btn-outline-secondary">Annuler</a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
