{% extends 'base.html.twig' %}
{% block title %}Passer une commande{% endblock %}
{% block body %}
<h1 class="mb-4"><i class="bi bi-cart-plus text-warning"></i> Passer une commande</h1>

<form method="post">
    <div class="row row-cols-1 row-cols-md-3 g-4 mb-4">
        {% for produit in produits %}
        <div class="col">
            <div class="card h-100" style="border-radius:14px;overflow:hidden;box-shadow:0 4px 16px rgba(0,0,0,0.10);border:none;">
                {% if produit.image %}
                    <div style="height:200px;background:#1a1a2e;overflow:hidden;position:relative;">
                        <img src="{{ asset('uploads/produits/' ~ produit.image) }}"
                            alt="{{ produit.nom }}"
                            style="width:100%;height:100%;object-fit:cover;object-position:center;opacity:0.92;">
                    </div>
                {% else %}
                    <div style="height:200px;background:#1a1a2e;display:flex;align-items:center;justify-content:center;">
                        <i class="bi bi-egg-fried text-warning" style="font-size:3rem;"></i>
                    </div>
                {% endif %}
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="fw-bold">{{ produit.nom }}</h5>
                        <p class="text-muted small">{{ produit.description ?? '' }}</p>
                    </div>
                    <div>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="fw-bold text-warning fs-5">{{ produit.prix|number_format(2, ',', ' ') }} €</span>
                        </div>
                        <div class="d-flex align-items-center justify-content-center gap-3 mt-2">
                            <button type="button"
                                    onclick="changerQte({{ produit.id }}, -1)"
                                    class="qte-btn">-</button>
                            <span id="affichage_{{ produit.id }}"
                                  style="font-size:1.1rem;font-weight:bold;min-width:20px;text-align:center;">
                                0
                            </span>
                            <input type="hidden"
                                   name="quantites[{{ produit.id }}]"
                                   id="input_{{ produit.id }}"
                                   value="0"
                                   data-prix="{{ produit.prix }}">
                            <button type="button"
                                    onclick="changerQte({{ produit.id }}, 1)"
                                    class="qte-btn">+</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

    <div class="card mb-4">
        <div class="card-body d-flex justify-content-between align-items-center">
            <span class="fs-5 fw-bold">Total estimé :</span>
            <span class="fs-4 fw-bold text-warning" id="total">0,00 €</span>
        </div>
    </div>

    <button type="submit" class="btn btn-orange btn-lg">
        <i class="bi bi-check-circle"></i> Confirmer la commande
    </button>
    <a href="{{ path('produit_index') }}" class="btn btn-outline-secondary btn-lg ms-2">Annuler</a>
</form>
{% endblock %}

{% block javascripts %}
<script>
    function changerQte(id, delta) {
        const input = document.getElementById('input_' + id);
        const affichage = document.getElementById('affichage_' + id);
        let val = parseInt(input.value) + delta;
        if (val < 0) val = 0;
        if (val > 20) val = 20;
        input.value = val;
        affichage.textContent = val;
        recalculer();
    }

    function recalculer() {
        let total = 0;
        document.querySelectorAll('input[name^="quantites"]').forEach(input => {
            total += parseFloat(input.dataset.prix) * parseInt(input.value || 0);
        });
        document.getElementById('total').textContent =
            total.toLocaleString('fr-FR', {minimumFractionDigits: 2}) + ' €';
    }
</script>
{% endblock %}