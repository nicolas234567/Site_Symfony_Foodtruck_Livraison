{% extends 'base.html.twig' %}
{% block title %}Mes commandes{% endblock %}

{% block body %}
<h1 class="mb-4"><i class="bi bi-receipt text-warning"></i> Mes commandes</h1>

{% if commandes is empty %}
    <div class="alert alert-info">
        Vous n'avez pas encore de commande.
        <a href="{{ path('commande_new') }}">Passer votre première commande →</a>
    </div>
{% else %}
    <div class="table-responsive">
        <table class="table table-hover align-middle bg-white rounded shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Date</th>
                    <th>Statut</th>
                    <th>Total</th>
                    <th>Détail</th>
                </tr>
            </thead>
            <tbody>
                {% for commande in commandes %}
                <tr>
                    <td>{{ commande.id }}</td>
                    <td>{{ commande.date|date('d/m/Y H:i') }}</td>
                    <td>
                        <span class="badge badge-{{ commande.statut }}">
                            {{ commande.statutLabel }}
                        </span>
                    </td>
                    <td class="fw-bold">{{ commande.total|number_format(2, ',', ' ') }} €</td>
                    <td>
                        <a href="{{ path('commande_show', {id: commande.id}) }}" class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-eye"></i>
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endif %}

{# ✅ Bouton visible pour tout le monde #}
<a href="{{ path('commande_new') }}" class="btn btn-orange mt-3">
    <i class="bi bi-cart-plus"></i> Nouvelle commande
</a>

{# Si tu veux montrer les boutons admin dans la démo #}
<a href="{{ path('produit_new') }}" class="btn btn-orange mt-3">
    <i class="bi bi-plus-circle"></i> Nouveau produit (admin demo)
</a>

{% endblock %}
