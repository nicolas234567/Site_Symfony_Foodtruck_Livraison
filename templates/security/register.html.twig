{% extends 'base.html.twig' %}
{% block title %}Inscription{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0"><i class="bi bi-person-plus"></i> Créer un compte</h4>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    {{ form_row(form.nom) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.plainPassword) }}
                    <button class="btn btn-orange w-100 mt-2">S'inscrire</button>
                {{ form_end(form) }}

                <div class="text-center mt-3">
                    <small>Déjà inscrit ? <a href="{{ path('app_login') }}">Se connecter</a></small>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
